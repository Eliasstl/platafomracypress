<%- include ('partials/header.ejs') %>
<body>
  <%- include ('partials/navbar.ejs') %>
  <br />
  <hr />
  <div class="container" style="max-height: 500px">
    <h1>Meus passos</h1>
   
    <a
      type="reset"
      class="btn btn-secondary"
      href="/criargrupo/<%= nometeste %>/<%= idempresa %>/<%=token%>"
      >voltar</a
    >
    <hr>
    <div class="row row-cols-1 row-cols-sm-2" id="dados-lista">
      <% if (dados && dados.length) { %> <% dados.forEach(dado => { %>
      <div class="col mb-3">
        <div class="card card-sm">
          <div class="card-body">
            <button
              class="btn btn-light btn-block text-left"
              name="passo"
              value="<%= dado.id %>"
            >
              <h2 class="card-title mb-0"><%= dado.titulo %></h2>
              <small class="card-text"><%= dado.tipo %></small>
            </button>
            <div class="mt-2">
              <a
                class="btn btn-primary btn-sm mr-2"
                name="passo"
                href="/adicionardadosgrupo/<%=dado.id%>/<%= nometeste %>/<%= dado.idempresa %>/<%=token%>"
                value="<%= dado.id %>"
                >selecionar</a
              >

              <a
              class="btn btn-danger btn-sm"
              name="delete"
              href="/deletadadospasso/<%=dado.id%>/<%= nometeste %>/<%= dado.idempresa %>/<%=token%>"
            >
              deletar
            </a>
              <a
                class="btn btn-secondary btn-sm"
                name="editar"
                href="/editardadosgrupo/<%=dado.id%>/<%= nometeste %>/<%= dado.idempresa %>/<%=token%>"
                value="<%= dado.id %>"
              >
                editar
              </a>
            </div>
          </div>
        </div>
      </div>
      <% }); %> <% } else { %>
      <p>Nenhum passo encontrado</p>
      <% } %>
    </div>
  </div>

  <%- include ('partials/footer.ejs') %>

  <script>
    // Adiciona barra de rolagem usando JavaScript
    const dadosLista = document.getElementById("dados-lista");
    dadosLista.style.overflowY = "scroll";
  </script>
</body>
